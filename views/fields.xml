<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_move_form_inherit_woocommerce" model="ir.ui.view">
            <field name="name">account.move.form.woocommerce</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Odoo WooCommerce Integration">
                        <field name="woocommerce_order_link" readonly="1" widget="html"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_account_move_tree_inherit_woocommerce" model="ir.ui.view">
            <field name="name">account.move.tree.woocommerce</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="woocommerce_order_link" readonly="1" widget="html"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_template_form_inherit_odoo_woocommerce" model="ir.ui.view">
            <field name="name">product.template.form.inherit.odoo.woocommerce</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Odoo WooCommerce Integration">
                        <field name="custom_available_quantity" class="oe_inline" readonly="1" widget="float"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_product_variant_form_inherit_odoo_woocommerce" model="ir.ui.view">
            <field name="name">product.variant.form.inherit.odoo.woocommerce</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Odoo WooCommerce Integration">
                        <field name="custom_available_quantity" class="oe_inline" readonly="1" widget="float"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_sale_order_form_inherit_woocommerce" model="ir.ui.view">
            <field name="name">sale.order.form.woocommerce</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Odoo WooCommerce Integration">
                        <field name="woocommerce_order_link" readonly="1" widget="html"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_sale_order_tree_inherit_woocommerce" model="ir.ui.view">
            <field name="name">sale.order.tree.woocommerce</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="woocommerce_order_link" readonly="1" widget="html"/>
                </xpath>
            </field>
        </record>
        <record id="view_quotation_tree_inherit_woocommerce" model="ir.ui.view">
            <field name="name">quotation.tree.woocommerce</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="woocommerce_order_link" readonly="1" widget="html"/>
                </xpath>
            </field>
        </record>
        <record id="view_picking_form_inherit_woocommerce" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.woocommerce</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="woocommerce_order_id" widget="char" readonly="1"/>
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <group string="Odoo WooCommerce Integration">
                        <field name="woocommerce_order_id" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
